{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug API Server",
            "cargo": {
                "args": [
                    "build",
                    "--bin=neuroquantum-api",
                    "--package=neuroquantum-api"
                ],
                "filter": {
                    "name": "neuroquantum-api",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug",
                "RUST_BACKTRACE": "1"
            },
            "console": "integratedTerminal",
            "sourceLanguages": ["rust"]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Core Tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--package=neuroquantum-core"
                ],
                "filter": {
                    "name": "neuroquantum-core",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug",
                "RUST_BACKTRACE": "1"
            },
            "console": "integratedTerminal",
            "sourceLanguages": ["rust"]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug QSQL Engine",
            "cargo": {
                "args": [
                    "build",
                    "--package=neuroquantum-qsql"
                ],
                "filter": {
                    "name": "neuroquantum-qsql",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug",
                "RUST_BACKTRACE": "1"
            },
            "console": "integratedTerminal",
            "sourceLanguages": ["rust"]
        }
    ]
}

