{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "bootstrap-sha": "",
  "last-release-sha": "",
  "always-update": true,
  "include-v-in-tag": false,
  "packages": {
    ".": {
      "release-type": "rust",
      "component": "neuroquantumdb",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": false,
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false
    },
    "connecting-libraries/php": {
      "release-type": "php",
      "component": "php-driver",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": true,
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false,
      "skip-github-release": false
    }
  },
  "separate-pull-requests": false,
  "tag-separator": "/",
  "sequential-calls": false,
  "group-pull-request-title-pattern": "chore(main): release ${component} ${version}",
  "pull-request-title-pattern": "chore(main): release ${component} ${version}",
  "changelog-sections": [
    {"type": "feat", "section": "Features"},
    {"type": "fix", "section": "Bug Fixes"},
    {"type": "perf", "section": "Performance Improvements"},
    {"type": "refactor", "section": "Code Refactoring"},
    {"type": "docs", "section": "Documentation"},
    {"type": "test", "section": "Tests"},
    {"type": "ci", "section": "CI/CD"},
    {"type": "build", "section": "Build System"},
    {"type": "chore", "section": "Miscellaneous", "hidden": true}
  ],
  "commit-search-depth": 500
}
