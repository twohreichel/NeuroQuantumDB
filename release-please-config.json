{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "bootstrap-sha": "4bd5d3ea67357947ba3aa45644fff97c00349013",
  "always-update": true,
  "include-v-in-tag": false,
  "packages": {
    ".": {
      "release-type": "simple",
      "component": "neuroquantumdb",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": false,
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false,
      "extra-files": [
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.package.version"
        }
      ]
    },
    "connecting-libraries/php": {
      "release-type": "php",
      "component": "php-driver",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": true,
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false,
      "skip-github-release": false
    },
    "crates/neuroquantum-core": {
      "release-type": "rust",
      "component": "neuroquantum-core",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": true,
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false
    },
    "crates/neuroquantum-qsql": {
      "release-type": "rust",
      "component": "neuroquantum-qsql",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": true,
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false
    },
    "crates/neuroquantum-cluster": {
      "release-type": "rust",
      "component": "neuroquantum-cluster",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": true,
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false
    },
    "crates/neuroquantum-api": {
      "release-type": "rust",
      "component": "neuroquantum-api",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": true,
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false
    },
    "crates/neuroquantum-wasm": {
      "release-type": "rust",
      "component": "neuroquantum-wasm",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": true,
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false
    }
  },
  "separate-pull-requests": false,
  "tag-separator": "/",
  "sequential-calls": false,
  "group-pull-request-title-pattern": "chore: release main",
  "pull-request-title-pattern": "chore(${scope}): release${component} ${version}",
  "changelog-sections": [
    {"type": "feat", "section": "Features"},
    {"type": "fix", "section": "Bug Fixes"},
    {"type": "perf", "section": "Performance Improvements"},
    {"type": "refactor", "section": "Code Refactoring"},
    {"type": "docs", "section": "Documentation"},
    {"type": "test", "section": "Tests"},
    {"type": "ci", "section": "CI/CD"},
    {"type": "build", "section": "Build System"},
    {"type": "chore", "section": "Miscellaneous", "hidden": true}
  ],
  "commit-search-depth": 500,
  "plugins": [
    {
      "type": "cargo-workspace",
      "merge": true,
      "considerAllArtifacts": true
    }
  ]
}
