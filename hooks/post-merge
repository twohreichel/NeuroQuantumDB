#!/bin/bash
# Post-merge hook for NeuroQuantumDB
# This script runs after a successful merge to update dependencies and run checks

set -e

echo "ðŸ”„ Running post-merge checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

print_status() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

# Check if Cargo.lock was updated
if git diff-tree -r --name-only --no-commit-id HEAD^ HEAD | grep -q "Cargo.lock"; then
    print_status "Cargo.lock was updated, updating dependencies..."
    cargo update
    print_success "Dependencies updated"
fi

# Check if any Cargo.toml files were updated
if git diff-tree -r --name-only --no-commit-id HEAD^ HEAD | grep -q "Cargo.toml"; then
    print_status "Cargo.toml files were updated, checking for new tools..."

    # Check if new dev tools need to be installed
    if command -v cargo-audit &> /dev/null && command -v cargo-deny &> /dev/null && command -v cargo-machete &> /dev/null; then
        print_success "All required tools are installed"
    else
        print_warning "Some tools may need to be installed. Run './scripts/setup-dev.sh' to update."
    fi
fi

# Run a quick security audit after merge
print_status "Running security audit..."
if cargo audit --quiet; then
    print_success "Security audit passed"
else
    print_warning "Security audit found issues. Run 'cargo audit' for details."
fi

print_success "Post-merge checks completed"
