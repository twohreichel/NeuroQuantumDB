#!/bin/bash
# Pre-commit hook for NeuroQuantumDB
# This script runs all linting checks before allowing a commit

set -e

echo "ðŸš€ Running pre-commit linting checks..."

# Check if we're in a Git repository
if ! git rev-parse --git-dir > /dev/null 2>&1; then
    echo "âŒ Not in a git repository"
    exit 1
fi

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Check if cargo is installed
if ! command -v cargo &> /dev/null; then
    print_error "Cargo is not installed. Please install Rust and Cargo."
    exit 1
fi

# Check if required tools are installed
check_tool() {
    if ! command -v "$1" &> /dev/null; then
        print_warning "$1 is not installed. Installing..."
        cargo install "$1"
    fi
}

print_status "Checking required tools..."
check_tool "cargo-audit"
check_tool "cargo-deny"
check_tool "cargo-machete"

# 1. Code formatting check
print_status "Checking code formatting..."
if cargo fmt --all -- --check; then
    print_success "Code formatting check passed"
else
    print_error "Code formatting check failed. Run 'cargo fmt --all' to fix."
    exit 1
fi

# 2. Clippy linting
print_status "Running Clippy analysis..."
if cargo clippy --workspace --all-targets --all-features -- -D warnings; then
    print_success "Clippy analysis passed"
else
    print_error "Clippy analysis failed. Fix the warnings and try again."
    exit 1
fi

# 3. Security audit
print_status "Running security audit..."
if cargo audit; then
    print_success "Security audit passed"
else
    print_error "Security audit failed. Check for vulnerabilities."
    exit 1
fi

# 4. License and dependency checks
print_status "Running dependency checks..."
if cargo deny check; then
    print_success "Dependency checks passed"
else
    print_error "Dependency checks failed. Review deny.toml configuration."
    exit 1
fi

# 5. Check for unused dependencies
print_status "Checking for unused dependencies..."
if cargo machete; then
    print_success "No unused dependencies found"
else
    print_warning "Unused dependencies detected. Consider removing them."
    # Don't fail the commit for unused dependencies, just warn
fi

# 6. Check for unsafe code blocks
print_status "Checking for unsafe code..."
if grep -r "unsafe" crates/ --include="*.rs" > /dev/null 2>&1; then
    print_error "Unsafe code detected! Remove all unsafe blocks before committing."
    grep -r "unsafe" crates/ --include="*.rs"
    exit 1
else
    print_success "No unsafe code found"
fi

# 7. Run tests (quick subset)
print_status "Running quick test subset..."
if cargo test --workspace --lib --bins; then
    print_success "Quick tests passed"
else
    print_error "Quick tests failed. Fix failing tests before committing."
    exit 1
fi

print_success "All pre-commit checks passed! ðŸŽ‰"
print_status "You can now commit your changes."
