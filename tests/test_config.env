# NeuroQuantumDB Testing Configuration
# Environment variables for database health check script

# Database Connection Settings
export DB_HOST="localhost"
export DB_PORT="8080"
export DB_NAME="neuroquantumdb"
export API_ENDPOINT="http://localhost:8080"

# Testing Configuration
export CONFIG_FILE="../config/dev.toml"
export LOG_DIR="./logs"
export BACKUP_DIR="./backups"

# Performance Thresholds
export CONNECTION_TIMEOUT_MS=5000
export QUERY_TIMEOUT_MS=1000
export SLOW_QUERY_THRESHOLD_MS=2000
export MEMORY_THRESHOLD_MB=1024
export CPU_THRESHOLD_PERCENT=80

# Test Categories (set to 0 to skip)
export TEST_CONNECTION=1
export TEST_STRUCTURE=1
export TEST_CONSISTENCY=1
export TEST_PERFORMANCE=1
export TEST_RESOURCES=1
export TEST_SECURITY=1
export TEST_BACKUP=1
export TEST_INDEXES=1

# Monitoring Integration
export ENABLE_PROMETHEUS_METRICS=0
export PROMETHEUS_GATEWAY=""
export ALERT_WEBHOOK=""

# Logging Configuration
export LOG_LEVEL="INFO"  # DEBUG, INFO, WARN, ERROR
export LOG_RETENTION_DAYS=7
export ENABLE_JSON_LOGS=0
