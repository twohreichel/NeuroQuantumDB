# NeuroQuantumDB Connection Configuration
# Copy this file to .env and adjust the values

# Database host (default: localhost)
NEUROQUANTUM_HOST=localhost

# Database port (default: 8080)
NEUROQUANTUM_PORT=8080

# API key for authentication (required)
# Generate via admin endpoint or use provided key
NEUROQUANTUM_API_KEY=nqdb_your_api_key_here

# Use HTTPS for secure connections (default: false for local dev)
NEUROQUANTUM_USE_SSL=false

# Connection timeout in seconds (default: 30)
NEUROQUANTUM_TIMEOUT=30

# Enable request retries (default: true)
NEUROQUANTUM_RETRY_ENABLED=true

# Maximum retry attempts (default: 3)
NEUROQUANTUM_RETRY_MAX_ATTEMPTS=3

# Enable debug logging (default: false)
NEUROQUANTUM_DEBUG=false

